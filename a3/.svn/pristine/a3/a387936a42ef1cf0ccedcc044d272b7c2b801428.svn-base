/*
 * sys_lseek
 * 
 * Changes the current position in an open file.
 */
int
sys_lseek(int fd, off_t offset, int whence, off_t *retval)
{
    struct ofile *f;
    struct stat *fstat;
    int result;

    // Find ofile in filetable
    if ((result = filetable_find(fd, &f))) {
        return result;
    }

    lock_acquire(f->lock);

    // Set retval according to whence argument
    switch(whence) {

        case SEEK_SET:
            *retval = offset;
            break;

        case SEEK_CUR:
            *retval = offset + f->offset;
            break;

        case SEEK_END:
            result = VOP_STAT(f->v, fstat);

            if (result) {
                lock_release(f->lock);
                return result;
            }

            *retval = offset + fstat->st_size;
            break;

        default:
            lock_release(f->lock);
            return EINVAL;
    }

    // Return error if seek position is negative
    if (*retval < 0) {
        lock_release(f->lock);
        return EINVAL;
    }

    // Attempt to perform seek
    result = VOP_TRYSEEK(f->v, *retval);

    if (result) {
        lock_release(f->lock);
        return result;
    }

    // Update file offset
    f->offset = *retval;

    lock_release(f->lock);
    return 0;
}


