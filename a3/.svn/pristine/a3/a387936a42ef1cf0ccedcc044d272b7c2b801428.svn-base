/*
 * sys_chdir
 * 
 * Changes the current directory of the current process.
 */
int
sys_chdir(userptr_t path)
{
    char kpath[__PATH_MAX];
    int result;

    // Check path valid
    if (path == NULL) {
        return EFAULT;
    }

    // Copy path to kernel space
    result = copyinstr(path, kpath, __PATH_MAX, NULL);
    
    if (result) {
        return result;
    }

    // Change directory
    result = vfs_chdir(kpath);
	return result;
}

